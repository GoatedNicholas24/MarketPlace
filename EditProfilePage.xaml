<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MarketPlace.EditProfilePage"
             Title="EditProfilePage">
    <ScrollView>
        <VerticalStackLayout Spacing="20">
            <Image x:Name="ProfileImage" HeightRequest="150" WidthRequest="150" Aspect="AspectFill" />
            <Button Text="Change Picture" Clicked="OnChangePictureClicked"/>

            <Entry x:Name="UsernameEntry" Placeholder="Username" />
            <Entry x:Name="PhoneEntry" Placeholder="Phone Number" Keyboard="Telephone"/>
            <Entry x:Name="LocationEntry" Placeholder="Location" />

            <Button Text="Save Changes" Clicked="OnSaveClicked" BackgroundColor="Green" TextColor="White"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>