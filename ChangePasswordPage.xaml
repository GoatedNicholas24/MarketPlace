<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MarketPlace.ChangePasswordPage"
             Title="ChangePasswordPage">
    <ScrollView Padding="20">
        <VerticalStackLayout Spacing="15">
            <Label Text="Current Password" />
            <Entry x:Name="CurrentPasswordEntry" IsPassword="True" Placeholder="Enter current password" />

            <Label Text="New Password" />
            <Entry x:Name="NewPasswordEntry" IsPassword="True" Placeholder="Enter new password" />

            <Label Text="Confirm New Password" />
            <Entry x:Name="ConfirmPasswordEntry" IsPassword="True" Placeholder="Confirm new password" />

            <Button Text="Update Password" Clicked="OnUpdatePasswordClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>